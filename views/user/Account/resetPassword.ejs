<% layout("./boilerplate/boilerplate.ejs") -%>

    <div class="flex w-full justify-center py-20 px-10">
        <form action="/api/user/profile/reset-password?_method=PUT" method="post"
        class="bg-gray-200 text-gray-700 w-full max-w-[340px] mx-4 md:p-6 p-4 py-8 text-left text-sm rounded-2xl shadow-[5px_5px_10px_0px] shadow-black/40">
        <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">Reset Password</h2>

        <input id="password"
            class="w-full border mt-1 bg-indigo-500/5 mb-2 border-gray-500/10 outline-none rounded py-2.5 px-3"
            type="password" placeholder="New Password" name="user[newPassword]" required>
        <input id="password"
            class="w-full border mt-1 bg-indigo-500/5 mb-7 border-gray-500/10 outline-none rounded py-2.5 px-3"
            type="password" placeholder="New Password Again" name="user[newPasswordAgain]" required>

        <button
            class="w-full mb-3 bg-indigo-500 hover:bg-indigo-600 transition-all active:scale-95 py-2.5 rounded text-white font-medium">Reset Password</button>

        
    </form>
    </div>