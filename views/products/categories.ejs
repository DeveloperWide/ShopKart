<% layout("./boilerplate/boilerplate.ejs") -%>

 <div
        class="grid grid-cols-1 justify-center items-center sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 md:m-5 m-15 p-5 gap-10 w-full">
        <% for(product of products) {%>
            <a href="/api/products/categories/<%= product.category %>" class="cursor-pointer">
                <div
                    class="category relative flex justify-center items-center  md:w-50 md:h-30 w-60 h-40 border border-gray-600 rounded-2xl overflow-hidden text-center text-white font-bold text-2xl">
                    <div class="absolute inset-0 mix-blend-darken bg-gray-100 bg-opacity-20 z-10"
                        style="background-color: black; opacity: 0.6;"></div>
                    <span class="text-white z-20">
                        <%= product.category %>
                    </span>
                </div>
            </a>
            <% } %>
    </div>